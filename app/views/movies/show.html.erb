<h1><%= @movie.title %></h1>

<p><%= @movie.body %></p>

<ul>
  <li><%= link_to "Edit", edit_movie_path(@movie) %></li>
  <li><%= link_to "Destroy", movie_path(@movie),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
</ul>

<h2>Comments</h2>
<%= render @movie.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>
